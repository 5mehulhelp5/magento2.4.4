<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="rule_information" sortOrder="10">
        <field name="is_loyalty_rule" sortOrder="150" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">sales_rule</item>
                    <item name="default" xsi:type="number">0</item>
                </item>
            </argument>
            <settings>
                <dataType>number</dataType>
                <label translate="true">Is loyalty rule</label>
                <visible>true</visible>
                <dataScope>is_loyalty_rule</dataScope>
                <switcherConfig>
                    <rules>
                        <rule name="0">
                            <value>0</value>
                            <actions>
                                <action name="0">
                                    <target>sales_rule_form.sales_rule_form.rule_information.loyalty_program_ids</target>
                                    <callback>hide</callback>
                                </action>
                            </actions>
                        </rule>
                        <rule name="1">
                            <value>1</value>
                            <actions>
                                <action name="0">
                                    <target>sales_rule_form.sales_rule_form.rule_information.loyalty_program_ids</target>
                                    <callback>show</callback>
                                </action>
                            </actions>
                        </rule>
                    </rules>
                    <enabled>true</enabled>
                </switcherConfig>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="loyalty_program_ids" sortOrder="160" formElement="multiselect">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">sales_rule</item>
                </item>
            </argument>
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>number</dataType>
                <label translate="true">Loyalty Programs</label>
                <dataScope>loyalty_program_ids</dataScope>
            </settings>
            <formElements>
                <multiselect>
                    <settings>
                        <options class="ZP\LoyaltyProgram\Model\Source\Adminhtml\SalesRule\Form\Fields\Field\LoyaltyProgramsOptions"/>
                    </settings>
                </multiselect>
            </formElements>
        </field>
    </fieldset>
</form>
