<?xml version="1.0" ?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="VConnect\Blog\Block\Widget\PostsList" id="vconnect_blog_posts_widget">
        <label>VConnect Blog Posts</label>
        <description>Blog Posts</description>
        <parameters>
            <parameter name="title" required="true" visible="true" xsi:type="text">
                <label>Title</label>
            </parameter>
            <parameter name="posts_per_page" xsi:type="text" required="true" visible="true">
                <label translate="true">Number of Posts per Page</label>
                <value>3</value>
            </parameter>
        </parameters>
    </widget>
</widgets>
