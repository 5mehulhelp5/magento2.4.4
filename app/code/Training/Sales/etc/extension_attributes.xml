<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Api/etc/extension_attributes.xsd">
    <extension_attributes for="Magento\Sales\Api\Data\OrderInterface">
        <attribute code="order_volume" type="decimal">
            <join reference_table="vconnect_order_volume_total" reference_field="order_id" join_on_field="entity_id">
                <field>order_volume</field>
            </join>
        </attribute>
    </extension_attributes>
    <extension_attributes for="Magento\Sales\Api\Data\OrderItemInterface">
        <attribute code="item_volume" type="decimal">
            <join reference_table="vconnect_order_item_volume" reference_field="order_item_id" join_on_field="item_id">
                <field>order_item_volume</field>
            </join>
        </attribute>
    </extension_attributes>
</config>
