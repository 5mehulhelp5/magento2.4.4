                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Tracking URL</label>
                <scopeLabel>[WEBSITE]</scopeLabel>
                <visible>true</visible>
                <dataScope>tracking_url</dataScope>
